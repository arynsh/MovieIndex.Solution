@using MovieIndex.Models;

@{
    Layout = "_Layout";
}

@model List<MovieIndex.Models.Genre>;

<h1>Genres</h1>

@if (Model.Count == 0)
{
    <h3>No genres added yet!</h3>
}

<ul>
    @foreach (Genre genre in Model)
    {
        <li>@Html.ActionLink($"{genre.Name}", "Details", new { id = genre.GenreId}) </li>
    }
</ul>

<p>@Html.ActionLink("Add new genre", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>