@using MovieIndex.Models;

@{
    Layout = "_Layout";
}

@model List<MovieIndex.Models.Movie>;

<h2>Movies</h2>

@if (Model.Count == 0)
{
    <h3>No movies have been added yet. Go watch some!!</h3>
}
<ul>
    @foreach (Movie movie in Model)
    {
        <li>@Html.ActionLink($"{movie.Name}", "Details", new {id = movie.MovieId})</li>
    }
</ul>

<p>@Html.ActionLink("Add a new movie", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>